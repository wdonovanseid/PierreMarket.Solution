@{
  Layout = "_Layout";
}

@using PierreMarket.Models;

<div class="jumbotron">
  <h1>List of Flavors</h1>
</div>

@if(Model.Count == 0)
{
  <p>No Flavors have been added.</p>
}
<ul>
  @foreach(Flavor x in Model)
  {
    <li>@x.FlavorName | @Html.ActionLink("Details", "Details", new { id = x.FlavorId })</li>
  }
</ul>

@if (User.Identity.Name == "admin@library.local")
{
  <p>@Html.ActionLink("Add a Flavor", "Create")</p>
}